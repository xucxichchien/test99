<%- include('layouts/header'); -%>

<h1 class="page-header"><%= title  %></h1>
<hr />

<div class="row products">
    
    <% products.forEach((p) => { %>
            <div class="col-xs-12 col-md-4 p">
                <a class="pa" href="/products/<%= p.categorey %>/<%= p.slug %>">
                    <% if (p.image == "") { %>

                        <img id="noImage" class="pimage"  src="/images/noImage.jpg" alt="" />
                
                        <% } else { %>
                
                            <img class="pimage" src="/images/product_imgs/<%= p.id %>/<%= p.image %>" alt="">
                        <% }  %>
                </a>
                <h3><%= p.title %></h3>
                <h4>Â£<%= parseFloat(p.price).toFixed(2) %></h4>
                <a class="vd" href="/products/<%= p.categorey %>/<%= p.slug %>">View Details</a>
            </div>
        <% }); %>
    
</div>

<%- include('layouts/footer'); -%>
