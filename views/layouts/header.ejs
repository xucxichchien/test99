
<!DOCTYPE html>
<html lang="en">

<head>

  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
  <meta name="description" content="">
  <meta name="author" content="">

  <title> <%= title %>  </title>

  <!-- Bootstrap core CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">

  <!-- fancy box -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/gh/fancyapps/fancybox@3.5.7/dist/jquery.fancybox.min.css" />


  <!-- our css -->
  <link type="text/css" rel="stylesheet" href="/css/style.css" crossorigin="anonymous" >

  <!-- jquery slim -->
  <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js" integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n" crossorigin="anonymous"></script>

</head>

<body>
<div class="ajaxbg">
  <div class="ajaxinner">
    <h4> You are now bieng redirected to paypal </h4>
    <img src="/images/ajax-loader.gif" alt="">
  </div>
</div>

  <!-- Navigation -->
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark static-top">
    <div class="container">
      <a class="navbar-brand" href="/">
        <img src="/images/hex_logo.png" width="50px" />
        Hex Luxury
      </a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="nav navbar-nav">
          <% pages.forEach(element => { %>
           
            <% if (element.title=="home") { %>
              <li class="nav-item active">
                <a class="nav-link" href="/"><%= element.title %> 
                  <span class="sr-only">(current)</span>
                </a>
              </li>
            <% } else { %>
            <li class="nav-item active">
              <a class="nav-link" href="/<%= element.slug %> "><%= element.title %> 
                <span class="sr-only">(current)</span>
              </a>
            </li>
          <% } %> 
          <% }) %>
        </ul>

        <ul class="navbar-nav ml-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/cart/checkout"> My Cart (
              <% if ( typeof(cart) !== "undefined" ) { %>
                <%= cart.length %> 
              <% } else { %>
0
              <% } %>

            ) 
              <span class="sr-only">(current)</span>
            </a>
          </li>
          <% if (user) { %>
            <li lass="nav-item active">  
            <a class="nav-link" href="/users/logout"><%= user.username %> (Logout)</a></li>

          <% } else { %>
            <li lass="nav-item active"><a class="nav-link" href="/users/register">Register</a></li>
            <li lass="nav-item active"><a class="nav-link" href="/users/login">Login</a></li>

            <% } %>

            <% if (user && user.admin ==1) { %>
              <li lass="nav-item active">  
              <a class="nav-link" target="_blank" href="/admin/pages">Admin Area</a></li>
              <% } %>
          
        </ul>
      </div>
    </div>
  </nav>

  <!-- Page Content -->
  <div class="container">
    
    <%- messages('messages', locals) %>

    

<br /> <br />
    <div class="row">
      <div class="col-xs-12 col-md-3">
        <h3>Categories</h3>
        <br />
        <ul class="list-group">
          <li class="list-group-item"><a href="/products">All Products</a></li>
          <% categories.forEach( c => { %>
           <li class="list-group-item"><a href="/products/<%= c.slug %> " > <%= c.title %> </a> </li>
          <% }) %>
        </ul>
      </div>
      <!-- <div class="col-xs-12 col-md-1"></div> -->
      <div class="col-xs-12 col-md-8">

        <% if(errors){%>
          <% errors.forEach(element => { %>
            <div class="alert alert-danger" style="padding-left: 3%;">Error: <%- element.msg %> </div>
          <%  }); %>
          <% } %>

